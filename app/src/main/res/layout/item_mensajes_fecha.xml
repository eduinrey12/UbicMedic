<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/crdMensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        app:cardBackgroundColor="#AAE5FF"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:minWidth="75dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtvMensaje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Fecha de atencion"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtvMensajeDia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dia: 17-8-2023"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtvMensajeHora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hora: 07:30 AM"
                android:textColor="#000000" />

            <LinearLayout
                android:id="@+id/llOpcionesFecha"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnFechaAceptar"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="#2196F3"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="Aceptar"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="5dp" />

                <Button
                    android:id="@+id/btnFechaRechazar"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:backgroundTint="#E91E63"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="Rechazar"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="5dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtvRespuestaFecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Esperando respuesta del cliente"
                android:textColor="#000000"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtvFechaEnvio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text="10Am"
                    android:textAlignment="textEnd"
                    android:textColor="#3A3A3A"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/imgMensajeEstado"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:tint="#3A3A3A"
                    app:srcCompat="@drawable/mensaje_enviado" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>