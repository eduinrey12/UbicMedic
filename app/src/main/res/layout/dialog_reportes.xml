<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/crdCitas"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="20dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtvNombrePerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:fontFamily="@font/aclonica"
            android:text="Reportes Chats"
            android:textAlignment="center"
            android:textColor="#2196F3"
            android:textSize="20sp"
            android:textStyle="bold" />



        <LinearLayout
            android:id="@+id/llChats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:text="Cliente:"
                android:textColor="#2196F3"
                android:textSize="16sp" />




        </LinearLayout>
        <LinearLayout
            android:id="@+id/llChats2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spnChats"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="8dp"/>


            <CheckBox
                android:id="@+id/ckCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:buttonTint="#2196F3" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/llFechaIni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txt_i_Fecha_Ini"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:textColorHint="#2196F3"
                app:boxBackgroundColor="#FFFFFF"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxStrokeColor="@color/color_normal_textinput"
                app:endIconDrawable="@drawable/baseline_calendar_month_24"
                app:endIconMode="custom"
                app:endIconTint="#2196F3"
                app:hintTextColor="#2196F3">

                <EditText
                    android:id="@+id/txtFechaIni"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:editable="false"
                    android:ems="10"
                    android:focusable="false"
                    android:hint="Fecha de Creada"
                    android:inputType="date"
                    android:text="2000-01-01"
                    android:textColor="#000000"
                    android:textColorHighlight="#2196F3" />
            </com.google.android.material.textfield.TextInputLayout>

            <CheckBox
                android:id="@+id/ckFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:buttonTint="#2196F3" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/llChats3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txttodosChats"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:text="Todos los chats"
                android:textColor="#2196F3"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/cktodosChats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:buttonTint="#2196F3" />


        </LinearLayout>
        <Button
            android:id="@+id/btnGenerarR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:backgroundTint="#2196F3"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="Generar reporte"
            android:textColor="#FFFFFF"
            android:visibility="visible"
            app:cornerRadius="10dp"
            app:iconGravity="textStart" />



    </LinearLayout>

</androidx.cardview.widget.CardView>
