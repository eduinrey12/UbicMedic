<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".SeleccionarTipoCuenta">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Selecciona el tipo de cuenta"
        android:textColor="#2196F3"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgSeleccion" />

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <Button
            android:id="@+id/btnPacientes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#1A2196F3"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="20dp"
            android:text="PACIENTE"
            android:textColor="#2196F3"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="20dp"
            app:icon="@drawable/selecionar_paciente"
            app:iconGravity="end"
            app:iconPadding="0dp"
            app:iconSize="50dp"
            app:iconTint="#2196F3" />

        <Button
            android:id="@+id/btnTrabajador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#1A2196F3"
            android:duplicateParentState="false"
            android:editable="false"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="20dp"
            android:text="TRABAJADOR"
            android:textColor="#2196F3"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="20dp"
            app:icon="@drawable/selecionar_doctor"
            app:iconGravity="end"
            app:iconPadding="0dp"
            app:iconSize="50dp"
            app:iconTint="#2196F3" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imgSeleccion"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/registro_selecion" />

</androidx.constraintlayout.widget.ConstraintLayout>